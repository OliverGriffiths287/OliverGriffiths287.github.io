{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/OliverGriffiths287/OliverGriffiths287.github.io/refs/heads/main/data/Education_Spending.csv"
  },
  "title": {
    "text": "Expenditure on Education for G7 nations",
    "subtitle": "Percentage of total government expenditure. Source: WorldBank",
    "subtitleFontSize": 8,
    "fontSize": 12
  },
  "width": "container",
  "height": "container",
  "mark": {
    "type": "line",
    "opacity": 1,
    "strokeWidth": 2
  },
  "encoding": {
    "x": {
      "field": "year",
      "type": "temporal",
      "title": "",
      "axis": {
        "grid": false
      }
    },
    "y": {
      "field": "Education Spending",
      "type": "quantitative",
      "title": "Education Expenditure (%)"
    },
    "color": {
      "field": "Country",
      "type": "nominal",
      "legend": {"orient": "bottom-left"}
    }
  }
}
