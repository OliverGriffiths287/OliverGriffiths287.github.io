{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 300,
  "data": {
    "url": "https://raw.githubusercontent.com/OliverGriffiths287/OliverGriffiths287.github.io/refs/heads/main/map_world.geojson",
    "format": {"property": "features"}
  },
  "projection": {"type":"naturalEarth1"},
  "transform": [
    {
      "lookup": "properties.ISO3",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/OliverGriffiths287/OliverGriffiths287.github.io/refs/heads/main/world_gdp_per_capita_PPP_wb.csv"
        },
        "key": "ISO3",
        "fields": ["value", "Country"]
      }
    }
  ],
  "layer": [
    {"transform": [{"filter": "datum.properties.ISO3 != 'ATA'"}],
      "mark":{"type": "geoshape", "fill":"lightgrey"}},
    {
      "mark": {"type": "geoshape"},
      "encoding": {
        "color": {
          "field": "value",
          "title": "Log GDP per capita",
          "type": "quantitative",
          "scale": {"type": "log"},
          "legend": {"format": "$,.0f"}
        }
      }
    }
  ]
}
