{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/OliverGriffiths287/OliverGriffiths287.github.io/refs/heads/main/data/Prem_Revenue_Points_2020.csv"
  },
  "title": {
    "text": "Premier League Season Revenue and Points Total, 2019/20",
    "subtitle": "114 Possible Points. Source: Premier League and Gov.uk"
  },
  "height": "container",
  "width": "container",
  "encoding": {
    "x": {
      "field": "points",
      "type": "quantitative",
      "title": "Points Total", 
      "scale": {"domain":[20, 100]}
    },
    "y": {
      "field": "revenue",
      "type": "quantitative",
      "title": "Season Revenue Â£M", 
      "scale":{"domain": [50, 550]}
    },
    "color": {
      "field": "Team",
      "type": "nominal",
      "legend": {"labelFontSize": 8 },
      "scale": {"scheme": "tableau20"}
    }
  },
  "layer": [
    {
      "mark": {
        "type": "circle",
        "size": 100,
        "opacity": 1
      }
    },
    {
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ],
      "mark": {
        "type": "circle",
        "tooltip": true
      },
      "encoding": {
        "opacity": {
          "condition": {
            "test": {
              "param": "hover",
              "empty": false
            },
            "value": 1
          },
          "value": 0
        },
        "size": {
          "condition": {
            "test": {
              "param": "hover",
              "empty": false
            },
            "value": 100
          },
          "value": 200
        }
      }
    }
  ]
}